<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/ll_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/box"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/ll_frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/pic1"
                android:id="@+id/iv_question"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <include layout="@layout/layout_choices_th"
            android:id="@+id/ll_choices_container_th"/>
    <include layout="@layout/layout_choices_en"
             android:id="@+id/ll_choices_container_en"/>
    <ImageView
        android:id="@+id/btn_back"
        android:layout_gravity="left"
        android:src="@drawable/bg_button_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>